extends ../layout/layout

block content
  main
    .container
      // Page Heading
      h1.my-4
        small Los mas escuchados!
      .container-results
        .row
          for item in results
            .col-lg-3.col-md-4.col-sm-6.portfolio-item
                .card.h-100
                  a(href='#')
                    img.card-img-top(src=item.img, alt='')
                  .card-body
                    h4.card-title
                      a(href='#') 
                      =item.name
                    p.card-text
                      =item.description
                  a.btn.btn-primary(href='/episodes/' + item.id) Ir
  main
    hr
    // Pagination
    nav.row.flex-center.wow.fadeIn(data-wow-delay='0.2s')
      ul.pagination
        li.page-item.disabled
          a.page-link(href='#!', aria-label='Previous')
            span(aria-hidden='true') «
            span.sr-only Previous
        li.page-item.active
          a.page-link(href='#!')
            | 1 
            span.sr-only (current)
        li.page-item
          a.page-link(href='#!') 2
        li.page-item
          a.page-link(href='#!') 3
        li.page-item
          a.page-link(href='#!') 4
        li.page-item
          a.page-link(href='#!') 5
        li.page-item
          a.page-link(href='#!', aria-label='Next')
            span(aria-hidden='true') »
            span.sr-only Next
    // /.Pagination

