extends ../layout/layout-my-account

block content
  main
    .container
      .row.my-2
        .col-lg-4.order-lg-1.text-center
          img.mx-auto.img-fluid.img-circle.d-block(src='https://placehold.it/150x150', alt='avatar')
          h6.mt-2 Upload a different photo
          label.custom-file
            input#file.custom-file-input(type='file')
            span.custom-file-control
        .col-lg-8.order-lg-2
          ul.nav.nav-tabs
            li.nav-item
              a.nav-link.active(href='', data-target='#profile', data-toggle='tab') Perfil
            li.nav-item
              a.nav-link(href='', data-target='#messages', data-toggle='tab') Favoritos
            li.nav-item
              a.nav-link(href='', data-target='#edit', data-toggle='tab') Editar
          .tab-content.py-4
            #profile.tab-pane.active
              h5.mb-3 User Profile
              .row
                .col-md-6
                  h6 About
                  p
                    | Web Designer, UI/UX Engineer
                  h6 Hobbies
                  p
                    | Indie music, skiing and hiking. I love the great outdoors.
                .col-md-12
                  h5.mt-2
                    span.fa.fa-clock-o.ion-clock.float-right
                    |  Recent Activity
                  table.table.table-sm.table-hover.table-striped
                    tbody
                      tr
                        td
