extends ../layout/layout

block content
    main
    .container
      // Page Heading
      h1.my-4
        small PodCast of #{getSearch()}
      .container-results
        .row
          for item in results
            .col-lg-3.col-md-4.col-sm-6.portfolio-item
              .card.h-100
                a(href='#')
                  img.card-img-top(src=item.img, alt='')
                .card-body
                  h4.card-title
                    a(href='#') 
                    =item.name
                  p.card-text
                    =item.description
                a.btn.btn-primary(href='#') Button