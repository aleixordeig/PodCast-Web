extends ../layout/layout

block content
  main
    p
      for item in podcast
        h1.text-center 
          =item.name
  // Main layout
  main.mt-5
    .container
      for item in podcast
        .row
          .col-md-4
            img.img-fluid.episodes(src=item.img , alt='')
          .col-md-8
            h3.my-3 Content
            p
              =item.description
    .container-episodes
        p
        .container
          for data in episodes
            #accordion(role='tablist', aria-multiselectable='true')
              .card
                #headingOne.card-header(role='tab', data-toggle='collapse', data-parent='#accordion', data-target='#collapseOne')
                  button.btn.btn-light-blue.float-right.btn-sm(type='button') Escuchar Audio
                  h5.mb-0
                    a(data-toggle='collapse', data-parent='#accordion', href='#collapseOne')
                      =data.episode
                #collapseOne.collapse.in(role='tabpanel', aria-labelledby='headingOne')
                  .card-block
                    =data.info
    