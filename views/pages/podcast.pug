extends ../layout/layout

block content
  .container-podcast
    main
      p
        for item in podcast
          h1.text-center 
            =item.name
    // Main layout
    main.mt-5
      .container
        for item in podcast
          .row
            .col-md-4
              img.img-fluid.episodes(src=item.img , alt='')
            .col-md-8
              h3.my-3 Content
              p
                =item.description
      .container-episodes
        .container
          p
            each data in episodes
              .accordion
                dl
                  dt
                    button.btn.btn-light-blue.float-right.btn-sm(type='button', data-toggle='modal', data-target='.bd-example-modal-lg') Escuchar Audio
                    .modal.fade.bd-example-modal-lg(tabindex='-1', role='dialog', aria-labelledby='mySmallModalLabel', aria-hidden='true')
                      .modal-dialog.modal-lg
                        .modal-content
                          audio(controls='', preload='metadata', style=' width:500px;')
                            source(src='', type='audio/mpeg')
                            |   Your browser does not support the audio element.
                          br
                          a(href='http://scriptgenerator.net/really-simple-embed-audio-player-script/', title='Generate here your HTML5 audio player', style='text-align: right;display: block') HTML5 Audio Player

                    a.accordion-title.accordionTitle.js-accordionTrigger(href='#accordion1', aria-expanded='false', aria-controls='accordion1') 
                      =data.episode
                  dd#accordion1.accordion-content.accordionItem.is-collapsed(aria-hidden='true')
                    p
                      =data.info